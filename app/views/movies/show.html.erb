<div class="col-lg-10">
  <div class="rounded-0 card shadow">
    <div class="card-body mt-5 mb-5">
      <p id="notice"><%= notice %></p>
      <p>
        <strong>Name:</strong>
        <%= @movie.name %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @movie.description %>
      </p>
      <p>
        <strong>Duration:</strong>
        <%= @movie.duration %>
      </p>
      <%= link_to 'Back', movies_path, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
